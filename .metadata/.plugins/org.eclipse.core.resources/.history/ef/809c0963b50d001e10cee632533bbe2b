	@PostMapping("/login")
	public ResponseEntity<User> Login(@RequestBody User user) {
		String inputEmail = user.getInputEmail();
		String inputPw =user.getInputPw();
		System.out.println("로그인이메일 : "+inputEmail);
		System.out.println("로그인비밀번호 : "+inputPw);

		User user1 = mapper.Login(user);
        if(user1!=null) {
        
//        if(inputEmail.equals(user1.getInputEmail())&&inputPw.equals(user1.getInputPw())){
        	System.out.println("로그인성공");
        	System.out.println(user1.getUser_joindate());
        	System.out.println(user1.getInputNick());
        	System.out.println(user1.getUser_role());
        	return ResponseEntity.ok(user);
        	
        }else {
        	System.out.println("로그인실패");
		return ResponseEntity.status(HttpStatus.UNAUTHORIZED).body(null);
        }
        }
}
